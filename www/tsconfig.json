{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "rootDirs": ["src"],
    "target": "es6",
    "lib": ["es2015", "es2017", "dom"],
    "sourceMap": true,
    "module": "esNext",
    "moduleResolution": "node",
    "jsx": "react",
    "strictNullChecks": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": ["src", "typings"]
}
